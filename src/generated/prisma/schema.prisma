generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  income
  expense
}

enum AccountType {
  bank
  cash
  credit
  investment
  other
}

model Category {
  id    Int             @id @default(autoincrement())
  name  String          @unique
  color String
  type  TransactionType
}

model Account {
  id      Int         @id @default(autoincrement())
  name    String      @unique
  type    AccountType
  balance Float       @default(0)
}
